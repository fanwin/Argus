# 开发环境配置文件
# 用于开发环境的特定配置

# ===========================================
# 基础配置
# ===========================================

# 测试环境
TEST_ENV=dev

# 浏览器配置
BROWSER=chrome
HEADLESS=false
WINDOW_SIZE=1920,1080

# 调试配置
DEBUG=true
HOT_RELOAD=true
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# ===========================================
# 开发服务器配置
# ===========================================

# 开发服务器端口
DEV_SERVER_PORT=8000
DEBUG_PORT=5678
VNC_PORT=5900

# Jupyter配置
JUPYTER_PORT=8888
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

# ===========================================
# 数据库配置（开发环境）
# ===========================================

# PostgreSQL开发数据库
DB_HOST=postgres-dev
DB_PORT=5432
DB_NAME=test_db_dev
DB_USERNAME=dev_user
DB_PASSWORD=dev_password

# Redis开发缓存
REDIS_HOST=redis-dev
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# API配置（开发环境）
# ===========================================

# API基础URL（本地开发）
API_BASE_URL=http://localhost:8000
WEB_BASE_URL=http://localhost:3000

# Mock API配置
MOCK_API_URL=http://api-mock:1080
USE_MOCK_API=true

# ===========================================
# Selenium配置（开发环境）
# ===========================================

# Selenium Grid配置
SELENIUM_HUB_URL=http://selenium-hub-dev:4444
SELENIUM_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=10

# 浏览器选项
CHROME_OPTIONS=--no-sandbox,--disable-dev-shm-usage,--disable-gpu
FIREFOX_OPTIONS=--no-sandbox

# ===========================================
# 测试配置
# ===========================================

# 测试并发
MAX_WORKERS=2
PARALLEL_EXECUTION=true

# 测试重试
MAX_RETRY_ATTEMPTS=2
RETRY_DELAY_SECONDS=1

# 测试超时
TEST_TIMEOUT=300
PAGE_LOAD_TIMEOUT=30
REQUEST_TIMEOUT=15

# ===========================================
# 日志配置
# ===========================================

# 日志级别
LOG_LEVEL=DEBUG
VERBOSE_LOGGING=true

# 日志文件
LOG_FILE=reports/logs/dev.log
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# ===========================================
# 报告配置
# ===========================================

# 报告目录
REPORTS_DIR=reports
ALLURE_RESULTS_DIR=reports/allure-results
ALLURE_REPORT_DIR=reports/allure-report
COVERAGE_DIR=reports/coverage

# 截图配置
SAVE_SCREENSHOTS=true
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_DIR=reports/screenshots
MAX_SCREENSHOT_SIZE=1920x1080

# ===========================================
# 开发工具配置
# ===========================================

# 代码质量工具
FLAKE8_CONFIG=.flake8
PYLINT_CONFIG=.pylintrc
BLACK_CONFIG=pyproject.toml

# 预提交钩子
PRE_COMMIT_ENABLED=true

# 自动重载
AUTO_RELOAD=true
WATCH_PATTERNS=*.py,*.yaml,*.json

# ===========================================
# 性能配置
# ===========================================

# 内存限制
MEMORY_LIMIT=4G
CPU_LIMIT=4.0

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=3600

# ===========================================
# 安全配置
# ===========================================

# 开发环境安全设置
SECURITY_ENABLED=false
SSL_VERIFY=false
ALLOW_INSECURE=true

# ===========================================
# 监控配置
# ===========================================

# 性能监控
PERFORMANCE_MONITORING=true
MEMORY_PROFILING=true
CPU_PROFILING=false

# 健康检查
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# ===========================================
# 文件服务器配置
# ===========================================

# 文件服务器
FILE_SERVER_URL=http://file-server-dev:80
UPLOAD_DIR=test-files/uploads
MAX_FILE_SIZE=100MB

# ===========================================
# 通知配置（开发环境禁用）
# ===========================================

# 邮件通知
EMAIL_ENABLED=false

# Slack通知
SLACK_ENABLED=false

# ===========================================
# 第三方服务配置
# ===========================================

# Elasticsearch（日志）
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=dev-logs

# Prometheus（监控）
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090

# Grafana（仪表板）
GRAFANA_HOST=grafana
GRAFANA_PORT=3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin123

# ===========================================
# Docker配置
# ===========================================

# Docker网络
DOCKER_NETWORK=argus-dev_test-network

# 容器配置
CONTAINER_TIMEZONE=Asia/Shanghai
CONTAINER_LOCALE=en_US.UTF-8

# ===========================================
# 开发特定配置
# ===========================================

# 开发模式标识
DEVELOPMENT_MODE=true
TESTING_MODE=true

# 数据生成
GENERATE_TEST_DATA=true
SEED_DATABASE=true

# 调试选项
BREAK_ON_ERROR=true
VERBOSE_ERRORS=true
SHOW_STACK_TRACE=true

# 热重载配置
HOT_RELOAD_PATTERNS=*.py,*.yaml,*.json,*.html,*.css,*.js
HOT_RELOAD_IGNORE=__pycache__,*.pyc,*.log,reports/*

# 开发工具集成
VSCODE_INTEGRATION=true
PYCHARM_INTEGRATION=true

# ===========================================
# 实验性功能
# ===========================================

# 实验性功能开关
EXPERIMENTAL_FEATURES=true
BETA_FEATURES=true

# 新功能测试
NEW_SELENIUM_FEATURES=true
ADVANCED_REPORTING=true
