# 环境变量配置示例文件
# 复制此文件为 .env 并根据实际情况修改配置

# ===========================================
# 基础配置
# ===========================================

# 测试环境 (dev/staging/prod)
TEST_ENV=dev

# 浏览器类型 (chrome/firefox/edge)
BROWSER=chrome

# 是否无头模式 (true/false)
HEADLESS=true

# 窗口大小
WINDOW_SIZE=1920,1080

# ===========================================
# API配置
# ===========================================

# API基础URL
API_BASE_URL=https://api-dev.yourproject.com

# API认证Token
API_TOKEN=your-api-token-here

# API用户名和密码（Basic认证）
API_USERNAME=your-api-username
API_PASSWORD=your-api-password

# API Key（如果使用API Key认证）
API_KEY=your-api-key-here

# JWT密钥（如果使用JWT认证）
JWT_SECRET=your-jwt-secret-here

# ===========================================
# Web UI配置
# ===========================================

# Web应用基础URL
WEB_BASE_URL=https://dev.yourproject.com

# ===========================================
# 数据库配置
# ===========================================

# 数据库主机
DB_HOST=dev-db.yourproject.com

# 数据库端口
DB_PORT=5432

# 数据库名称
DB_NAME=test_db

# 数据库用户名和密码
DB_USERNAME=test_user
DB_PASSWORD=test_password

# ===========================================
# 代理配置
# ===========================================

# HTTP代理
HTTP_PROXY=http://proxy.company.com:8080

# HTTPS代理
HTTPS_PROXY=https://proxy.company.com:8080

# ===========================================
# 通知配置
# ===========================================

# Slack Webhook URL
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# 邮件通知配置
SMTP_SERVER=smtp.yourproject.com
SMTP_PORT=587
SMTP_USERNAME=notifications@yourproject.com
SMTP_PASSWORD=your-smtp-password
NOTIFICATION_EMAIL=team@yourproject.com

# ===========================================
# 报告配置
# ===========================================

# Allure报告服务器URL
ALLURE_SERVER_URL=http://localhost:5050

# ===========================================
# 安全配置
# ===========================================

# 是否启用SSL验证 (true/false)
SSL_VERIFY=true

# 测试用户凭据（仅用于测试环境）
TEST_ADMIN_USERNAME=admin@yourproject.com
TEST_ADMIN_PASSWORD=admin123
TEST_USER_USERNAME=user@yourproject.com
TEST_USER_PASSWORD=user123

# ===========================================
# 性能配置
# ===========================================

# 最大并发数
MAX_WORKERS=4

# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# 页面加载超时时间（秒）
PAGE_LOAD_TIMEOUT=60

# ===========================================
# 调试配置
# ===========================================

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 是否启用详细日志 (true/false)
VERBOSE_LOGGING=false

# 是否保存截图 (true/false)
SAVE_SCREENSHOTS=true

# ===========================================
# CI/CD配置
# ===========================================

# CI环境标识 (true/false)
CI=false

# 构建号
BUILD_NUMBER=

# Git分支
GIT_BRANCH=

# Git提交哈希
GIT_COMMIT=

# ===========================================
# Docker配置
# ===========================================

# Docker网络名称
DOCKER_NETWORK=test-network

# Selenium Grid Hub URL
SELENIUM_HUB_URL=http://selenium-hub:4444

# ===========================================
# 第三方服务配置
# ===========================================

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch配置
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# ===========================================
# 自定义配置
# ===========================================

# 项目特定的配置项
PROJECT_NAME=Argus
PROJECT_VERSION=1.0.0

# 测试数据配置
TEST_DATA_PATH=data/test_data.json
GENERATED_DATA_PATH=data/generated_data.json

# 报告配置
REPORTS_RETENTION_DAYS=30
MAX_SCREENSHOT_SIZE=1920x1080

# 重试配置
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=2

# 并行测试配置
PARALLEL_WORKERS=auto
PARALLEL_SCOPE=function

# ===========================================
# 环境特定配置
# ===========================================

# 开发环境特定配置
DEV_API_URL=https://api-dev.yourproject.com
DEV_WEB_URL=https://dev.yourproject.com

# 预发布环境特定配置
STAGING_API_URL=https://api-staging.yourproject.com
STAGING_WEB_URL=https://staging.yourproject.com

# 生产环境特定配置
PROD_API_URL=https://api.yourproject.com
PROD_WEB_URL=https://yourproject.com

# ===========================================
# 功能开关
# ===========================================

# 是否启用API测试 (true/false)
ENABLE_API_TESTS=true

# 是否启用Web UI测试 (true/false)
ENABLE_WEB_TESTS=true

# 是否启用性能测试 (true/false)
ENABLE_PERFORMANCE_TESTS=false

# 是否启用安全测试 (true/false)
ENABLE_SECURITY_TESTS=false

# 是否启用可访问性测试 (true/false)
ENABLE_ACCESSIBILITY_TESTS=false

# 是否启用移动端测试 (true/false)
ENABLE_MOBILE_TESTS=false

# ===========================================
# 监控和指标
# ===========================================

# Prometheus配置
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090

# Grafana配置
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin

# ===========================================
# 备份和恢复
# ===========================================

# 备份目录
BACKUP_DIR=backups

# 是否自动备份测试数据 (true/false)
AUTO_BACKUP=false

# 备份保留天数
BACKUP_RETENTION_DAYS=7
